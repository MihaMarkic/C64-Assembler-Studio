<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
        xmlns:vm="clr-namespace:C64AssemblerStudio.Engine.ViewModels;assembly=C64AssemblerStudio.Engine"
        xmlns:v="clr-namespace:C64AssemblerStudio.Desktop.Views"
        xmlns:c="clr-namespace:C64AssemblerStudio.Desktop.Converters"
        xmlns:cmn="clr-namespace:C64AssemblerStudio.Engine.Common;assembly=C64AssemblerStudio.Engine"
        xmlns:views="clr-namespace:C64AssemblerStudio.Desktop.Views"
        xmlns:mv="clr-namespace:C64AssemblerStudio.Desktop.Views.Main"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="600" Width="800"
        MinHeight="300" Height="600"
        x:Class="C64AssemblerStudio.Desktop.Views.Main.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="{Binding Caption}">
    <Grid>
        <TextBlock Text="Loading" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="60" FontFamily="{StaticResource C64Mono}"
                   IsVisible="{Binding Converter={x:Static ObjectConverters.IsNull}}" />
        <mv:MainContent x:Name="MainContent" IsVisible="False"/>
    </Grid>
</Window>